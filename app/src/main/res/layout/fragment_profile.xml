<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/profilebg"
    tools:context=".Profile">



        <TextView
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="@font/montserratlight"
            android:text="W E L C O M E"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/songs"
            android:text="Songs"
            android:background="#acff6200"
            android:textColor="#fff"
            android:textSize="12dp"
            android:shadowColor="#f95b06"
            android:fontFamily="@font/montserratlight"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/songs"
            android:id="@+id/favourite"
            android:text="Favourites"
            android:background="#c2ea6b1c"
            android:textColor="#fff"
            android:textSize="12sp"
            android:fontFamily="@font/montserratlight"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/favourite"
            android:id="@+id/playlist"
            android:text="Playlists"
            android:background="#acff6200"
            android:textColor="#fff"
            android:textSize="12sp"
            android:fontFamily="@font/montserratlight"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/playlist"
            android:id="@+id/artist"
            android:text="Artists"
            android:background="#c2ea6b1c"
            android:textColor="#fff"
            android:textSize="12sp"
            android:fontFamily="@font/montserratlight"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
           android:layout_above="@+id/logout"
            android:layout_centerHorizontal="true"
            android:id="@+id/refer"
            android:text="Refer and Earn"
            android:background="#acff6200"
            android:textColor="#fff"
            android:textSize="12dp"
            android:shadowColor="#f95b06"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/montserratlight"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_above="@+id/refer"
            android:layout_centerHorizontal="true"
            android:id="@+id/subs"
            android:text="Subscribe"
            android:background="#acff6200"
            android:textColor="#fff"
            android:textSize="12dp"
            android:shadowColor="#f95b06"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserratlight"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />


        <Button
        android:id="@+id/logout"
        android:text="Logout"
        android:textColor="#fff"
        android:background="#03000000"
        android:layout_above="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

     <TextView
         android:layout_marginBottom="10dp"
         android:layout_above="@+id/bnav"
         android:id="@+id/txt"
         android:textAlignment="center"
         android:textColor="#fff"
         android:textSize="8sp"
         android:text="Copyright Â© Mushare"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />

        <Button
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:id="@+id/bnav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>
